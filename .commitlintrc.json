{
    "extends": ["@commitlint/config-conventional"],
    "rules": {
        "body-max-line-length": [2, "always", [72]],
        "subject-case": [2, "always", ["lower-case"]],
        "header-max-length": [2, "always", [55]],
        "type-case": [2, "always", ["upper-case"]],
        "type-enum": [
            2,
            "always",
            [
                "DOCS",
                "FEAT",
                "FIX",
                "PERF",
                "REFACTOR",
                "REVERT",
                "STYLE",
                "TEST"
            ]
        ]
    }
}
